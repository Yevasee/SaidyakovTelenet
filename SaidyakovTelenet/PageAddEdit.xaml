<Page x:Class="SaidyakovTelenet.PageAddEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SaidyakovTelenet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddEdit">

    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontSize="20" Margin="10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TextBoxSubscriberId" Text="{Binding SUBSCRIBER_ID}" FontSize="20" IsReadOnly="True" Margin="10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия: " FontSize="20" Margin="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="TextBoxSubscriberLastName" Text="{Binding SUBSCRIBER_LASTNAME}" FontSize="20" Margin="10"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя: " FontSize="20" Margin="10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="TextBoxSubscriberFirstName" Text="{Binding SUBSCRIBER_FIRSTNAME}" FontSize="20" Margin="10"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Отчество: " FontSize="20" Margin="10"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="TextBoxSubscriberPatronymic" Text="{Binding SUBSCRIBER_PATRONYMIC}" FontSize="20" Margin="10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Адрес:" FontSize="20" Margin="10"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="TextBoxSubscriberAddress" Text="{Binding SUBSCRIBER_ADDRESS}" FontSize="20" Margin="10"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Дата подключения:" FontSize="20" Margin="10"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="TextBoxSubscriberConnectionDate" Text="{Binding _SUBSCRIBER_CONNECTION_DATE}" FontSize="20" Margin="10"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Статус:" FontSize="20" Margin="10"/>
        <ComboBox Grid.Row="6" Grid.Column="1" Name="ComboBoxStatusOfSubscriber" SelectionChanged="ComboBoxStatusOfSubscriber_SelectionChanged" FontSize="20" Background="Transparent" Margin="10">
            <TextBlock>Активен</TextBlock>
            <TextBlock>Приостановлен</TextBlock>
            <TextBlock>Заблокирован</TextBlock>
        </ComboBox>

        <Button Grid.Row="7" Grid.Column="0" Content="Удалить" Name="ButtonDelete" Click="ButtonDelete_Click" Margin="10" Opacity="{Binding SUBSCRIBER_ID}"/>
        <Button Grid.Row="7" Grid.Column="1" Content="Сохранить" Name="ButtonSave" Click="ButtonSave_Click" Margin="10"/>

    </Grid>
</Page>
